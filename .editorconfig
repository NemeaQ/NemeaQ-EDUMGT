root = true

[*]
indent_style             = space
indent_size              = 4
end_of_line              = lf
trim_trailing_whitespace = true
insert_final_newline     = true
charset                  = utf-8

[Makefile]
indent_style = tab

[*.{json,md,yml}]
indent_size = 2

# Ignore paths
[{vendor/**,*.phar,token.txt}]
indent_style             = unset
indent_size              = unset
end_of_line              = unset
trim_trailing_whitespace = unset
insert_final_newline     = unset
charset                  = unset
