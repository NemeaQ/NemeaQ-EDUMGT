root = true

[*]
indent_style             = space
indent_size              = 4
end_of_line              = lf
trim_trailing_whitespace = true
insert_final_newline     = true
charset                  = utf-8
max_line_length          = off

[*.{json,md,yml}]
indent_size = 2

[token.txt]
insert_final_newline = false

# Ignore paths
[{/vendor/**, composer.phar}]
charset                  = unset
end_of_line              = unset
insert_final_newline     = unset
trim_trailing_whitespace = unset
indent_style             = unset
indent_size              = unset
